{
    "name": "nelisjunior/sugoigame",
    "description": "One Piece MMORPG - Sugoi Game",
    "type": "project",
    "keywords": ["game", "mmorpg", "one-piece", "php"],
    "license": "proprietary",
    "require": {
        "php": ">=8.1",
        "ext-mysqli": "*",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-xml": "*",
        "ext-zip": "*",
        "stripe/stripe-php": "^12.0",
        "phpmailer/phpmailer": "^6.8",
        "eftec/bladeone": "^4.12"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.40",
        "phpstan/phpstan-strict-rules": "^1.5",
        "phpunit/php-code-coverage": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "SugoiGame\\": "public/Classes/",
            "SugoiGame\\Utils\\": "public/Utils/",
            "SugoiGame\\Funcoes\\": "public/Funcoes/",
            "SugoiGame\\Constantes\\": "public/Constantes/"
        },
        "files": [
            "public/Funcoes/requires.php",
            "public/Constantes/requires.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse --memory-limit=256M",
        "fix": "php-cs-fixer fix",
        "check": "php-cs-fixer fix --dry-run --diff",
        "dev:setup": [
            "composer install",
            "@analyse",
            "@test"
        ],
        "deploy:prepare": [
            "@check",
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}